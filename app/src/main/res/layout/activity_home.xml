<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.HomeActivity">


    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    </android.support.v4.view.ViewPager>


    <RadioGroup
        android:id="@+id/rads"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:background="@mipmap/bg_homepage_bottom"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingRight="@dimen/dp_3"
        android:layout_marginTop="790dp"
        >
        <Space
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            />
        <RadioButton
            android:id="@+id/home_button_home"
            android:layout_width="@dimen/dp_29"
            android:layout_height="@dimen/dp_29"
            android:button="@null"
            android:background="@drawable/syclick"
            android:checked="true"
            android:layout_marginTop="@dimen/dp_8"
            />
        <Space
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />
        <RadioButton
            android:id="@+id/home_button_circle"
            android:layout_width="@dimen/dp_29"
            android:layout_height="@dimen/dp_29"
            android:background="@drawable/qzclick"
            android:button="@null"
            android:layout_marginTop="@dimen/dp_8"
            />
        <Space
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />
        <RadioButton
            android:id="@+id/home_button_shop"
            android:layout_width="@dimen/dp_55"
            android:layout_height="@dimen/dp_55"
            android:background="@mipmap/tab_home_bottom_gouwuche"
            android:button="@null"
            android:layout_marginTop="@dimen/dp_3"
            />
        <Space
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />
        <RadioButton
            android:id="@+id/home_button_bill"
            android:layout_width="@dimen/dp_27"
            android:layout_height="@dimen/dp_27"
            android:background="@drawable/zdclick"
            android:button="@null"
            android:layout_marginTop="@dimen/dp_8"
            />
        <Space
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />
        <RadioButton
            android:id="@+id/home_button_my"
            android:layout_width="@dimen/dp_27"
            android:layout_height="@dimen/dp_27"
            android:background="@drawable/wdclick"
            android:button="@null"
            android:layout_marginTop="@dimen/dp_8"
            />
        <Space
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />

    </RadioGroup>


</RelativeLayout>