<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    app:cardCornerRadius="@dimen/dp_4"
    app:contentPaddingBottom="@dimen/dp_4"
    android:layout_marginRight="20dp"
   >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:id="@+id/circleitem">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_70"
        android:orientation="horizontal">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/circle_user_txpicture"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_70"
            android:padding="@dimen/dp_10"
            />
        <TextView
            android:id="@+id/circle_user_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:text="11111"
            android:gravity="left"
            android:textSize="20dp"
            android:textColor="#000"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/circle_user_time"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:text="1111"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="#666666"
            android:layout_weight="1"/>

    </LinearLayout>
    <TextView
        android:id="@+id/circle_user_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#666666"
        android:textSize="17sp"
        android:text="1111111111111"/>
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/circle_user_picture"
        android:layout_width="@dimen/dp_250"
        android:layout_height="@dimen/dp_250"
        android:layout_marginLeft="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_50"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right">
            <CheckBox
                android:id="@+id/circle_dianzan_img"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:button="@drawable/dzclick"
                android:layout_margin="@dimen/dp_10"
                />
            <TextView
                android:id="@+id/circle_dianzan_num"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_30"
                android:text="1111111"
                android:gravity="center"
                android:textSize="@dimen/dp_15"
                android:layout_gravity="center"/>
        </LinearLayout>

    </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>