<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bitmap"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:layout_marginTop="192dp"
        >

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="152dp"
        >

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/MyTopImage"
            fresco:roundAsCircle="true"
            fresco:roundedCornerRadius="20dp"
            android:layout_width="110dp"
            android:layout_height="110dp"
            fresco:placeholderImage="@mipmap/tupian"
            />

        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="黄瓜炒鸡蛋怕不怕"
            android:textSize="16sp"
            android:textColor="#666666"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="322dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="24dp"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="44dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="35dp"
            >
            <ImageView
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@mipmap/my_icon_information"
                />

            <ImageView
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@mipmap/my_icon_circle"
                android:layout_marginTop="40dp"
                />
            <ImageView
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@mipmap/my_icon_foot"
                android:layout_marginTop="40dp"
                />
            <ImageView
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@mipmap/my_icon_wallet"
                android:layout_marginTop="40dp"
                />
            <ImageView
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@mipmap/my_icon_address"
                android:layout_marginTop="40dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="44dp"
            android:layout_marginLeft="30dp"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/text_geren"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:textSize="20sp"
                android:textColor="#666666"
                android:text="个人资料"
                android:gravity="center"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ededed"
                android:layout_marginTop="3dp"
                />

            <TextView
                android:id="@+id/text_quanzi"
                android:layout_marginTop="36dp"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:textSize="20sp"
                android:textColor="#666666"
                android:text="我的圈子"
                android:gravity="center"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ededed"
                android:layout_marginTop="3dp"
                />
            <TextView
                android:id="@+id/text_zuji"
                android:layout_marginTop="36dp"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:textSize="20sp"
                android:textColor="#666666"
                android:text="我的足迹"
                android:gravity="center"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ededed"
                android:layout_marginTop="3dp"
                />
            <TextView
                android:id="@+id/text_qianbao"
                android:layout_marginTop="36dp"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:textSize="20sp"
                android:textColor="#666666"
                android:text="我的钱包"
                android:gravity="center"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ededed"
                android:layout_marginTop="3dp"
                />
            <TextView
                android:id="@+id/text_dizhi"
                android:layout_marginTop="36dp"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:textSize="20sp"
                android:textColor="#666666"
                android:text="我的收货地址"
                android:gravity="center"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ededed"
                android:layout_marginTop="3dp"
                />

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>